<div class="col-md-12">
  <h2 class="text-center"> 我发表过的文章 </h2>
  <table class="table">
    <thead>
      <tr>
        <th> 文章内容 </th>
        <th> 所属讨论组 </th>
        <th> 更新时间 </th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td>
          <td> <%= post.group.title %> </td>
          <td> <%= post.updated_at %> </td>
          <td> <%= link_to("编辑", edit_group_post_path(post.group, post), class: "btn btn-primary btn-xs")%> </td>
          <td> <%= link_to("删除", group_post_path(post.group, post), method: :delete, class: "btn btn-warning btn-xs", data: { confirm: "你确定删除这篇文章吗？"}) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
